
<% if @objectives.blank? %>
<p>There are not any Objectives currently in the system.</p>
<% else %>
<p>These are the current Objectives in our system</p>

<ul id = "objectives" class="item-list">
   <% @objectives.each do |c| %>
    <li>
        <%= link_to display_objective_name(c), {:action => 'show', :id => c.id} -%>
        <%= link_to c.iteration.name, {:action => 'show_iterations', :iteration_id => c.iteration_id} -%>
        <p><%= c.description %></p>
        <b>
            <%= link_to 'Edit', {:action => "edit", :id => c.id} %>
        </b>
        <b>
            <%= link_to "Delete", {:action => 'delete', :id => c.id}, data:{ confirm: "Are you sure you want to delete this item?", :disable_with => "Processing..."} %>
        </b>
    </li>
    <% end %>
</ul>

<% end %>
